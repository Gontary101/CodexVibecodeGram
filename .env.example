# Required
TELEGRAM_BOT_TOKEN=123456:replace_me
OWNER_TELEGRAM_ID=123456789

# Optional: enable Telegram checklist approvals (Bot API 9.1+) when using
# a Telegram Business connection. If unset, approval requests use polls.
# TELEGRAM_BUSINESS_CONNECTION_ID=replace_me

# Storage
SQLITE_PATH=./data/state.sqlite3
RUNS_DIR=./runs
CODEX_WORKDIR=.
CODEX_ALLOWED_WORKDIRS=.

# Codex execution templates
# Placeholders available:
# {job_id}, {prompt}, {prompt_quoted}, {session_name}, {session_name_quoted}, {approved},
# {output_last_message_path}, {output_last_message_path_quoted}
CODEX_EPHEMERAL_CMD_TEMPLATE=codex exec {prompt_quoted}
CODEX_SESSION_CMD_TEMPLATE=codex exec --skip-git-repo-check resume {session_name_quoted} {prompt_quoted}
CODEX_SKIP_GIT_REPO_CHECK=true
CODEX_AUTO_SAFE_FLAGS=true
CODEX_SAFE_DEFAULT_APPROVAL=on-request

# Optional session bootstrap command (used by /session create). Not required when
# you only want to reference existing Codex session IDs with /run_session.
# CODEX_SESSION_BOOT_CMD_TEMPLATE=tmux new-session -d -s codex-{session_name_quoted} 'codex resume {session_name_quoted}'

# Worker behavior
WORKER_POLL_INTERVAL=0.5
MAX_PARALLEL_JOBS=1
JOB_TIMEOUT_SECONDS=3600
COMMAND_COOLDOWN_SECONDS=1.0

# Artifact policy
MAX_ARTIFACT_BYTES=50000000
ALLOWED_ARTIFACT_EXTENSIONS=.txt,.log,.json,.png,.jpg,.jpeg,.gif,.webp,.mp4,.pdf

# Telegram output style
TELEGRAM_RESPONSE_MODE=natural

# Logging
LOG_LEVEL=INFO
